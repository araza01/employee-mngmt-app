    <script>
        $(document).ready(function() {
            $(`.more-vision`).hide();
            $(`.more-mission`).hide();
            $(`.more-goals`).hide();

            $(`.vision-btn`).click(function() {
                $(`.more-vision`).show();
                $(`.vision-btn`).hide();
            });

            $(`.mission-btn`).click(function() {
                $(`.more-mission`).show();
                $(`.mission-btn`).hide();
            });

            $(`.goals-btn`).click(function() {
                $(`.more-goals`).show();
                $(`.goals-btn`).hide();
            });
        });
    </script>
    
